{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017",
      "DOM",
      "DOM.Iterable",
      "esnext",
      "WebWorker",
      "ES2015.Promise",
      "ES2018.Promise"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": false,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}
